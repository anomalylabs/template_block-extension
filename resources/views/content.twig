{% if block.template.extension == 'twig' %}
    {% include block.template.location %}
{% elseif block.template.extension == 'md' %}
    {{ block.template.content|markdown|raw }}
{% elseif block.template.extension == 'html' %}
    {{ block.template.content|raw }}
{% elseif block.template.extension in ['css', 'scss', 'less'] %}
    <style type="text/css">
        {{ asset_inline(block.template.location)|raw }}
    </style>
{% elseif block.template.extension in ['js', 'coffee'] %}
    <script type="text/javascript">
        {{ asset_inline(block.template.location)|raw }}
    </script>
{% endif %}
